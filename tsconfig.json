{
  "include": ["src/**/*", "types/**/*"],
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "types": ["@typescript-to-lua/language-extensions"],
    "strict": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "build/",
  },
  "tstl": {
    "luaTarget": "universal",
    "buildMode": "default",
    "noResolvePaths": ["lunaconf", "awful", "gears", "inspect", "lgi"],
    "noImplicitSelf": true,
    "noHeader": true
  }
}