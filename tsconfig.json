{
  "include": ["src/**/*", "types/**/*"],
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "types": ["@typescript-to-lua/language-extensions", "lua-types/5.3"],
    "strict": true,
    "noImplicitThis": true,
    "jsx": "react",
    "jsxFactory": "setupWidget",
    "allowSyntheticDefaultImports": true,
    "outDir": "build/",
  },
  "tstl": {
    "luaTarget": "universal",
    "buildMode": "default",
    "noResolvePaths": ["lunaconf", "lunaconf.config", "awful", "beautiful", "gears", "inspect", "lgi", "wibox"],
    "noImplicitSelf": true,
    "noHeader": true,
  }
}